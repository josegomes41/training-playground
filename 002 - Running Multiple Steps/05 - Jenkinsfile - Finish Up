pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "exit \$((RANDOM % 2))"
            }
        }
    }
    post{
    always { 
            echo 'always'
        }
	failure { 
            echo 'fail'
        }
	sucess { 
            echo 'sucess'
        }
    }
}
