pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
		
	}
	parameters{
		text(name: 'PLACEHOLDER_REPLACEMENT', defaultValue: '', description: 'Enter some information about the person')
	}
    stages {
        stage('build') {
		
            steps {
	    	sh """
	    	sed "s#AQUI_VAI_ENTRAR#${PLACEHOLDER_REPLACEMENT}#g 006 - Cleaning Up and Notifications/example.html
	    	""" 
	    	def html = readFile('example.html')
                emailext body: html,
   		 subject: 'Test Subject',
   		to: 'nb25145@novabase.pt'
            }
        }
    }
}
